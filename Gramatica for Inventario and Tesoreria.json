//Definicion de gramática para el modelo
//de inventarios de la sala.

entity Categoria {
    referencia: string, //referencia de categoria
    nombre: string, //nombre de la categoria
}

entity Articulo {
	referencia: string,	//referencia del articulo
	categoria: Categoria, //categoria a la que pertenece el articulo
	nombre: string,	//nombre del articulo
    tamaño: string, //tamaño categorico del articulo, grande, mediano, pequeño,
    color: string, //color del articulo, dependiendo del tipo de articulo puede o no ser relevante 
    imagen: image //imagen del articulo
}

entity Inventario {
	articulo: Articulo, //Articulo en el inventario de la sala
	estado: string, //estado actual del articulo
    fecha_actualizacion: date //fecha de actualización del articulo en el inventario
}

//Definicion de gramática para el modelo
//de tesoreria de la sala

entity Egreso {
    referencia: string, //referencia del egreso realizado al fondo de tesoreria
    fecha: date, //fecha de realizacion del egreso al fondo
    motivo: string, //motivo por el cual se realiza el egreso
    monto: int, //Monto o valor del egreso
    fondo_tesoreria: Fondo_Tesoreria //fondo de tesoreria al que se asocia el egreso
}

entity Fondo_Tesoreria{
    referencia: string, //referencia del registro de tesoreria
    fecha: date, //fecha de registro del fondo de tesoreria
    monto_neto: int, //valor neto existente en tesoreria al momento de realizar el registro de tesoreria
    egreso: Egreso //egresos realizados durante el periodo subsecuente al anterior registro de tesoreria, a tener en cuenta en la contabilidad del registro actual
}